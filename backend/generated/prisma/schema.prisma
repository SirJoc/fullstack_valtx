generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  products Product[]

  @@map("Usuario")
}

model Product {
  id        String @id @default(uuid())
  nombre    String
  categoria String
  userId    String

  user User @relation(fields: [userId], references: [id])

  images ProductImage[]

  @@map("Producto")
}

model ProductImage {
  id        String @id @default(uuid()) // Autogenerated UUID
  url       String
  productId String

  product Product @relation(fields: [productId], references: [id])

  @@map("Imagen")
}
